{
    "name": "365condman/wordpress-plugin",
    "description": "Sistema de Gestão de Condomínio para WordPress",
    "type": "wordpress-plugin",
    "license": "proprietary",
    "version": "0.1.0",
    "authors": [
        {
            "name": "Equipe 365 Cond Man",
            "email": "contato@365condman.com.br"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "composer/installers": "^2.0",
        "phpmailer/phpmailer": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "CondMan\\Core\\": "src/Core/",
            "CondMan\\Admin\\": "src/Admin/",
            "CondMan\\Public\\": "src/Public/",
            "CondMan\\Domain\\": "src/Domain/",
            "CondMan\\Infrastructure\\": "src/Infrastructure/"
        },
        "files": [
            "config/constants.php",
            "config/environment.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CondMan\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpcs": "phpcs --standard=WordPress src/",
        "phpcbf": "phpcbf --standard=WordPress src/",
        "migrations": "php vendor/bin/migrations",
        "persistence": "php vendor/bin/persistence-service"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        },
        "allow-plugins": {
            "composer/installers": true
        }
    },
    "extra": {
        "wordpress-plugin-dir": "wp-content/plugins/365condman"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
